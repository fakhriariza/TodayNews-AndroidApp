<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_101sdp"
            android:layout_height="@dimen/_101sdp"
            android:background="@drawable/logo"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20ssp"
            android:text="Tiara &amp; Jamil Wedding"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:text="Daftar Pengunjung Hadir:"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvTitle"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"/>

        <LinearLayout
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                tools:text="0 orang"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"/>

            <ImageView
                android:id="@+id/ivRefresh"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_gravity="center"
                android:background="@drawable/ic_refresh" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCount"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/count"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginHorizontal="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bnvMainActivity"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/cardbackground"
        android:theme="@style/Widget.BottomNavigationView"
        app:elevation="10dp"
        app:itemIconTint="@color/navbar_colors"
        app:itemTextColor="@color/navbar_colors"
        app:labelVisibilityMode="labeled">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/barcode_white" />
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#0156A9"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>