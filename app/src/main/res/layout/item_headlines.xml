<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="@dimen/_220sdp"
    app:cardUseCompatPadding="true"
    android:id="@+id/rlHeadlinesCard"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:background="@drawable/cardbackground">

    <ImageView
        android:id="@+id/ivHeadlines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:fontFamily="@font/poppins_bold"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="OPM Rilis Video Penyanderaan Pilot Susi Air: Kami Tangkap karena Negara Tak Akui Papua Merdeka - Nasional Tempo"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sourcebackground"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvSources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="detik.com"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/nunitosemibold"
            android:textColor="@color/white"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>